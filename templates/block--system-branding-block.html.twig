{% extends "block.html.twig" %}
{% block content %}
  {% if site_slogan %}
    <span id="wdn_site_affiliation">{{ site_slogan|raw }}</span>
  {% else %}
    <span id="wdn_site_affiliation"></span>
  {% endif %}
  {% if site_name %}
    <span id="wdn_site_title"><a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a></span>
  {% endif %}
{% endblock %}
